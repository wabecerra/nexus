{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "moduleResolution": "node",          // <-- ENSURE Node.js resolution
    "types": ["node"],                  // <-- Enable Node globals (path, __dirname)
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["lib/**/*.ts", "bin/**/*.ts"]
}